<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="GraphicalUserInterface.ClientController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <TextField fx:id="clientNameField" promptText="Name"/>
        <TextField fx:id="clientAddressField" promptText="Address"/>
        <TextField fx:id="clientEmailField" promptText="Email"/>
        <Button text="Add" onAction="#handleAddClient"/>
        <Button text="Update" onAction="#handleUpdateClient"/>
        <Button text="Delete" onAction="#handleDeleteClient"/>
        <Button text="Refresh" onAction="#handleRefreshClient"/>
    </HBox>

    <TableView fx:id="clientTable" prefHeight="400"/>
</VBox>
