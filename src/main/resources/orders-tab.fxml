<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="GraphicalUserInterface.OrderController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <TextField fx:id="orderClientIdField" promptText="Client ID"/>
        <TextField fx:id="orderProductIdField" promptText="Product ID"/>
        <TextField fx:id="orderQuantityField" promptText="Quantity"/>
        <Button text="Place Order" onAction="#handleAddOrder"/>
    </HBox>

    <TableView fx:id="orderTable" prefHeight="400"/>
</VBox>
